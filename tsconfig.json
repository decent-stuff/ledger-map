{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "../../dist/wasm": ["./src/js/wasm.d.ts"]
    }
  },
  "include": [
    "src/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
